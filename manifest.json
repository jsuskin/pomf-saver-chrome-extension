{
  "manifest_version": 3,
  "name": "Pomf Saver",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "*://pomf2.lain.la/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://pomf2.lain.la/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icons8-shrug-lineal-color-16.png",
    "32": "icons/icons8-shrug-lineal-color-32.png",
    "96": "icons/icons8-shrug-lineal-color-96.png"
  }
}